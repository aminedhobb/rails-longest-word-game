<h1>New game</h1>
<ul class="list-inline">
  <% @letters.each do |letter| %>
  <li class="list-inline-item"> <%= letter %> </li>
  <% end %>
</ul>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <form action="/score" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
        <div class="form-group">
          <label for="your-word">What is the longest word you can find?</label>
            <div class="input-group">
              <input type="text" class="form-control" id="your-word" name="word">
              <div class="input-group-addon">
                <input type="submit" value="Play" id="btn-play">
              </div>
           </div>

        </div>
      </form>
    </div>
  </div>


